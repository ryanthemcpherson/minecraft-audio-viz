{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "renderer-capabilities.schema.json",
  "title": "RendererCapabilitiesMessage",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "renderer_capabilities"
    },
    "v": {
      "type": "string"
    },
    "zone": {
      "type": "string"
    },
    "supported_backends": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../types/renderer-backend.schema.json"
      },
      "uniqueItems": true
    },
    "active_backend": {
      "$ref": "../types/renderer-backend.schema.json"
    },
    "fallback_backend": {
      "$ref": "../types/renderer-backend.schema.json"
    },
    "experimental_backends": {
      "type": "array",
      "items": {
        "$ref": "../types/renderer-backend.schema.json"
      },
      "uniqueItems": true
    },
    "providers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hologram": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "available": {
              "type": "boolean"
            },
            "provider": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "notes": {
              "type": "string"
            }
          },
          "required": ["available"]
        }
      }
    }
  },
  "required": ["type", "supported_backends", "active_backend"]
}
