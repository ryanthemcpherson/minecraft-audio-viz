{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "code-auth.schema.json",
  "title": "CodeAuthMessage",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "code_auth"
    },
    "v": {
      "type": "string"
    },
    "code": {
      "type": "string",
      "pattern": "^[A-Z]{4}-[A-Z2-9]{4}$"
    },
    "dj_name": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["type", "code", "dj_name"]
}
