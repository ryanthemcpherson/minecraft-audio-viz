{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "init-pool.schema.json",
  "title": "InitPoolMessage",
  "description": "Initialize or resize the display entity pool for a zone.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "init_pool"
    },
    "v": {
      "type": "string"
    },
    "zone": {
      "type": "string",
      "minLength": 1
    },
    "count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 256,
      "description": "Number of display entities to allocate"
    },
    "block_type": {
      "type": "string",
      "description": "Minecraft block material (e.g. SEA_LANTERN, GLOWSTONE)"
    }
  },
  "required": ["type", "zone", "count"]
}
