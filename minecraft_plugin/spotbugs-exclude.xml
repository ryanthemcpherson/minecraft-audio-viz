<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Bukkit plugins store a mutable Plugin reference by design -->
  <Match>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2,MS_EXPOSE_REP" />
  </Match>

  <!-- Singleton pattern: writing static instance from onEnable() is standard Bukkit -->
  <Match>
    <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD" />
  </Match>

  <!-- Thread-safety of Bukkit scheduler primitives is handled by the server -->
  <Match>
    <Bug pattern="AT_STALE_THREAD_WRITE_OF_PRIMITIVE" />
  </Match>

  <!-- Swallowing exceptions in shutdown/cleanup is intentional -->
  <Match>
    <Bug pattern="DE_MIGHT_IGNORE" />
    <Method name="shutdown" />
  </Match>

  <!-- Random is fine for visual effects and game mechanics (not crypto) -->
  <Match>
    <Bug pattern="PREDICTABLE_RANDOM" />
  </Match>

  <!-- Switch without default is intentional in menu/command handlers (unhandled slots are no-ops) -->
  <Match>
    <Bug pattern="SF_SWITCH_NO_DEFAULT" />
  </Match>

  <!-- Dead stores and unused fields in pattern/entity code are typical of iterative development -->
  <Match>
    <Bug pattern="DLS_DEAD_LOCAL_STORE,URF_UNREAD_FIELD,UC_USELESS_OBJECT,SS_SHOULD_BE_STATIC" />
  </Match>

  <!-- ItemStack.setItemMeta() returns boolean but mutates in place; return value is safely ignored -->
  <Match>
    <Bug pattern="RV_RETURN_VALUE_IGNORED_NO_SIDE_EFFECT" />
  </Match>

  <!-- Null-path warnings on Bukkit config/YAML getters â€” values are validated at load time -->
  <Match>
    <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE" />
  </Match>

  <!-- MenuHolder.getInventory() returns the stored inventory which may technically be null before init -->
  <Match>
    <Bug pattern="NP_NONNULL_RETURN_VIOLATION" />
    <Class name="com.audioviz.gui.MenuManager$MenuHolder" />
  </Match>
</FindBugsFilter>
