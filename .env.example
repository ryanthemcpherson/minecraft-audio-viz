# AudioViz Configuration
# Copy this file to .env and customize for your setup

# Minecraft Server Connection
MINECRAFT_HOST=localhost
MINECRAFT_PORT=8765

# VJ Server (for multi-DJ mode)
VJ_SERVER_PORT=9000

# Preview Server
PREVIEW_PORT=8766
HTTP_PORT=8080

# DJ Authentication (for VJ server mode)
DJ_AUTH_FILE=configs/dj_auth.json

# Audio Settings (optional)
# AUDIO_APP=spotify
# LOW_LATENCY=false

# Debug (optional)
# LOG_LEVEL=INFO

# ===========================================================================
# MCAV Site & Coordinator (site/, coordinator/, worker/)
# ===========================================================================

# Coordinator Service
MCAV_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mcav
MCAV_JWT_DEFAULT_EXPIRY_MINUTES=15
MCAV_RATE_LIMIT_RESOLVE_PER_MINUTE=10
MCAV_RATE_LIMIT_REGISTER_PER_HOUR=5
MCAV_RATE_LIMIT_AUTH_PER_MINUTE=20
MCAV_CORS_ORIGINS=["https://mcav.live","http://localhost:3000"]

# User Auth
MCAV_USER_JWT_SECRET=your-secret-key-here
MCAV_USER_JWT_EXPIRY_MINUTES=60
MCAV_REFRESH_TOKEN_EXPIRY_DAYS=30

# Discord OAuth
MCAV_DISCORD_CLIENT_ID=your-discord-app-client-id
MCAV_DISCORD_CLIENT_SECRET=your-discord-app-client-secret
MCAV_DISCORD_REDIRECT_URI=https://mcav.live/api/auth/discord/callback

# URLs
MCAV_BASE_URL=https://mcav.live
MCAV_COORDINATOR_URL=https://api.mcav.live

# Site (Next.js)
NEXT_PUBLIC_COORDINATOR_URL=http://localhost:8090
NEXT_PUBLIC_GITHUB_URL=https://github.com/ryanthemcpherson/minecraft-audio-viz

# Discord Audio Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
VJ_SERVER_HOST=localhost
VJ_BROADCAST_PORT=8766
