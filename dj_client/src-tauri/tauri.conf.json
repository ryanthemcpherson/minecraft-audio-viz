{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCAV DJ Client",
  "version": "1.0.0",
  "identifier": "com.audioviz.dj-client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCAV DJ Client",
        "width": 560,
        "height": 820,
        "minWidth": 520,
        "minHeight": 760,
        "resizable": true,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../../mcav-large.png",
      "../../mcav.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
