{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCAV DJ Client",
  "version": "1.0.0",
  "identifier": "com.audioviz.dj-client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCAV DJ Client",
        "width": 560,
        "height": 820,
        "minWidth": 520,
        "minHeight": 760,
        "resizable": true,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' ws: wss: http: https:; img-src 'self' data: https:"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "publisher": "MCAV",
    "copyright": "Copyright (c) 2024 Ryan McPherson",
    "shortDescription": "Real-time audio visualization for Minecraft",
    "longDescription": "MCAV DJ Client captures system audio and streams real-time frequency analysis to Minecraft servers, powering beat-reactive visualizations built with Display Entities.",
    "windows": {
      "nsis": {
        "headerImage": "installer/nsis-header.bmp",
        "sidebarImage": "installer/nsis-sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "installMode": "both",
        "displayLanguageSelector": false
      },
      "wix": {
        "language": "en-US",
        "bannerPath": "installer/wix-banner.bmp",
        "dialogImagePath": "installer/wix-dialog.bmp"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["mcav"]
      }
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/ryanthemcpherson/minecraft-audio-viz/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY3NTJCODE5M0MwQkM4MUUKUldRZXlBczhHYmhTOXpkQUcxWHpsSWxOUjM1T2tVZCt1ME13K2h4ZkVKTnU0amMwK1hwU21oL1IK"
    }
  }
}
